<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:name="com.lab2tddd80.tjegu689.lab2.TopicsFragment"
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:layout="@layout/topic_view" />

    <fragment
        android:name="com.lab2tddd80.tjegu689.lab2.DetailFragment"
        android:id="@+id/details"
        android:layout_toRightOf="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        tools:layout="@layout/details" />


</RelativeLayout>